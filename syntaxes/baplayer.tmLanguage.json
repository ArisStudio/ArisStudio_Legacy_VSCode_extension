{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "baplayer",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#keywords.other"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.baplayer",
					"match": "\\b(load|spr|bgm|bg|se|cover|banner|banner2|label|t|txt|th|button|target|jump|wait|text|curtain)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.single.baplayer",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.baplayer",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.line.double-slash",
			"match": "//[^\n]*"
		},
		"keywords.other": {
			"name": "keyword.other",
			"match": "=[^\n]*"
		}
	},
	"scopeName": "source.txt"
}